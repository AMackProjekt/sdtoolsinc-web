{
  "name": "ReferralDataSyncPipeline",
  "properties": {
    "description": "Sync referral submissions from API to Azure SQL",
    "activities": [
      {
        "name": "GetReferralsFromAPI",
        "type": "Copy",
        "dependsOn": [],
        "policy": {
          "timeout": "0.12:00:00",
          "retry": 3,
          "retryIntervalInSeconds": 30
        },
        "typeProperties": {
          "source": {
            "type": "RestSource",
            "httpRequestTimeout": "00:01:40",
            "requestMethod": "GET"
          },
          "sink": {
            "type": "AzureSqlSink",
            "writeBehavior": "insert",
            "sqlWriterUseTableLock": false
          },
          "enableStaging": false,
          "translator": {
            "type": "TabularTranslator",
            "mappings": [
              {
                "source": { "path": "$['id']" },
                "sink": { "name": "ReferralId", "type": "String" }
              },
              {
                "source": { "path": "$['referrerName']" },
                "sink": { "name": "ReferrerName", "type": "String" }
              },
              {
                "source": { "path": "$['referrerEmail']" },
                "sink": { "name": "ReferrerEmail", "type": "String" }
              },
              {
                "source": { "path": "$['participantName']" },
                "sink": { "name": "ParticipantName", "type": "String" }
              },
              {
                "source": { "path": "$['participantEmail']" },
                "sink": { "name": "ParticipantEmail", "type": "String" }
              },
              {
                "source": { "path": "$['programInterest']" },
                "sink": { "name": "ProgramInterest", "type": "String" }
              },
              {
                "source": { "path": "$['submittedAt']" },
                "sink": { "name": "SubmittedAt", "type": "DateTime" }
              }
            ]
          }
        },
        "inputs": [
          {
            "referenceName": "ApiReferralsDataset",
            "type": "DatasetReference"
          }
        ],
        "outputs": [
          {
            "referenceName": "SqlReferralsDataset",
            "type": "DatasetReference"
          }
        ]
      }
    ]
  }
}
